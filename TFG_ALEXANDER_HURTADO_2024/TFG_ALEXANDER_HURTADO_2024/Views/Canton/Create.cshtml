@model DB.Models.canton

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <link rel="stylesheet" type="text/css" href="~/content/CreateStyle.css">
</header>


<style>
    .control-label {
        white-space: nowrap;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="text-center">Crear Canton</h2>
                </div>

                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(model => model.idCanton, "Id Cantón", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.idCanton, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el IdCanton" } })
                                @Html.ValidationMessageFor(model => model.idCanton, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Descripcion, "Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese la Descripcion" } })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Provincia_idProvincia, "IdProvincia", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.Provincia_idProvincia, ViewBag.IdProvincia as SelectList, "Seleccione la provincia", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Provincia_idProvincia, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-success">Crear</button>
                                @Html.ActionLink("Volver al Listado", "Index", null, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
