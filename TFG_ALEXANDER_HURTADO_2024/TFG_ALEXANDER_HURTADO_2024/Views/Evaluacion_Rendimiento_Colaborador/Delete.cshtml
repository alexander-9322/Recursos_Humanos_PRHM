@model DB.Models.evaluacion_remndimiento_colaborador

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <link rel="stylesheet" type="text/css" href="~/Content/EliminarStyle.css" />
</header>

<style>
    dl.dl-horizontal dt {
        width: 40%; /* Ancho para las etiquetas de descripción */
        float: left;
        clear: left;
        text-align: left; /* Alineación a la izquierda para las etiquetas de descripción */
        margin-right: 10px;
    }

    dl.dl-horizontal dd {
        margin-left: 0; /* Elimina el margen izquierdo */
        margin-bottom: 10px; /* Espaciado entre elementos */
    }
</style>


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="alert-container">
                <div class="alert alert-warning">
                    <strong>Atención:</strong> Si eliminas esta evaluación no podrás recuperarla.
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="text-center">Eliminar evaluación</h2>
                </div>

                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>
                            Fecha de evaluación
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Fecha_Evaluacion)
                        </dd>

                        <dt>
                            Calificación
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Calificacion)
                        </dd>

                        <dt>
                            Retroalimentación
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Retroalimentacion)
                        </dd>

                        <dt>
                            Descripción
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.catalago_desempeño.Descripcion)
                        </dd>


                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-default" /> |
                            @Html.ActionLink("Volver al Listado", "Index", null, new { @class = "btn btn-danger" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
