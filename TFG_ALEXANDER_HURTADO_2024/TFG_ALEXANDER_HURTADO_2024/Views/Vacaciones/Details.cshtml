                            @Html.DisplayFor(model => model.Empleados_Id_Empleado)
                        </dd>
                    </dl>
                </div>

                <div class="panel-footer text-center">
                    <p>
                        @Html.ActionLink("Volver al Listado", "Index", null, new { @class = "btn btn-danger" })
