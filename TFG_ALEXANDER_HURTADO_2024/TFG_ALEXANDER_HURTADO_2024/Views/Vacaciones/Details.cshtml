@model DB.Models.vacacione

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header>
    <link rel="stylesheet" type="text/css" href="~/Content/DetalleStyle.css" />
</header>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="text-center">Detalles de Vacaciones</h2>
                </div>

                <div class="panel-body">
                    <h4>VACACIONE</h4>
                    <hr />
                    <dl class="dl-horizontal">
