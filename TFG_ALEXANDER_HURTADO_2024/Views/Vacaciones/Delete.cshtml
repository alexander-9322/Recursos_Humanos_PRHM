@model DB.Models.vacacione

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <link rel="stylesheet" type="text/css" href="~/Content/EliminarStyle.css" />
</header>

<style>
    dl.dl-horizontal dt {
        width: 40%; /* Ancho para las etiquetas de descripción */
        float: left;
        clear: left;
        text-align: left; /* Alineación a la izquierda para las etiquetas de descripción */
        margin-right: 10px;
    }

    dl.dl-horizontal dd {
        margin-left: 0; /* Elimina el margen izquierdo */
        margin-bottom: 10px; /* Espaciado entre elementos */
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="alert-container">
                <div class="alert alert-warning">
                    <strong>Atención:</strong> Si rechazas las vacaciones no podrás recuperarla.
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="text-center">Rechazar vacaciones</h2>
                </div>

                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>
                            Cantidad de días
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Cantidad_Dias)
                        </dd>

                        <dt>
                            Estado
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Aprobaciones_IdAprobaciones)
                        </dd>

                        <dt>
                            Id del empleado
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Empleados_Id_Empleado)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Rechazar" class="btn btn-default" /> |
                            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
