@model DB.Models.control_de_permiso_colaborador

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <link rel="stylesheet" type="text/css" href="~/Content/DetalleStyle.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/alinearStyle.css" />
</header>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="text-center">Detalles de permisos</h2>
                </div>

                <div class="panel-body">
                    @*<h4>Detalles de permiso</h4>*@
                    <hr />
                    <dl class="dl-horizontal">
                        
                        <dt>
                            Id permiso
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Id_Permiso)
                        </dd>

                        <dt>
                            Fecha de solicitud
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Fecha_Solicitud)
                        </dd>

                        <dt>
                            Tipo de permiso
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.catalogo_control_permisos_colaborador.Descripcion)
                        </dd>

                        <dt>
                            Id empleado
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Empleados_Id_Empleado)
                        </dd>

                    </dl>
                </div>
                <div class="panel-footer text-center">
                    <p>
                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>