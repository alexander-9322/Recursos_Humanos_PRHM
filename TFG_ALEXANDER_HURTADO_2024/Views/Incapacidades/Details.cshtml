@model DB.Models.incapacidade

@{
    ViewBag.Title = "Detalles Incapacidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <link rel="stylesheet" type="text/css" href="~/Content/DetalleStyle.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/alinearStyle.css" />
</header>
<style>
    .control-label{
        white-space: nowrap;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="text-center">Detalles de incapacidad</h2>
                </div>

                <div class="panel-body">
                    @*<h4>Provincia</h4>*@
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            Fecha de inicio
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Fecha_Inicio)
                        </dd>

                        <dt>
                            Fecha de fin
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Fecha_Fin)
                        </dd>

                        <dt>
                            Monto de incapacidad
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Monto_Incapacidad)
                        </dd>

                        <dt>
                            Tipo de incapacidad
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.catalogo_tipo_incapacidades.Descripcion)
                        </dd>

                    </dl>
                </div>
                <div class="panel-footer text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.idIncapacidades, idTipoIncapacidad = Model.IdTipoIncapacidad, idEmpleado = Model.Empleados_Id_Empleado }, new { @class = "btn btn-default" }) |
                    @Html.ActionLink("Volver ", "Index", null, new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </div>
</div>

