@model DB.Models.canton

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/alinearStyle.css" />
</head>

<style>
    .container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin-top: -200px;
    }

    .panel {
        width: 400px;
        border: 2px solid #5bc0de;
        border-radius: 8px;
        margin-top: 50px;
    }

    .panel-heading {
        background-color: #5bc0de;
        border-bottom: 2px solid #5bc0de;
        border-radius: 6px 6px 0 0;
    }

    .panel-body {
        padding: 20px;
        background-color: #f0f0f0; /* Fondo gris */
    }

    .dl-horizontal dt {
        float: left;
        width: 160px;
        overflow: hidden;
        clear: left;
        text-align: right;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .dl-horizontal dd {
        margin-left: 180px;
    }

    .btn-default {
        background-color: #5bc0de;
        border-color: #5bc0de;
        color: #fff;
    }

        .btn-default:hover {
            background-color: #4da2c1;
            border-color: #4da2c1;
        }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="text-center">Detalles de cantón</h2>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>
                                Cantón
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>

                            <dt>
                                Provincia
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.provincia.Descripcion)
                            </dd>

                        </dl>
                    </div>

                    <div class="panel-footer text-center">
                        @Html.ActionLink("Editar", "Edit", new { idCanton = Model.idCanton, idProvincia = Model.Provincia_idProvincia }, new { @class = "btn btn-default" }) |
                        @Html.ActionLink("Volver ", "Index", null, new { @class = "btn btn-danger" })
                    </div>

                </div>
            </div>
        </div>

    </div>
 </div>


