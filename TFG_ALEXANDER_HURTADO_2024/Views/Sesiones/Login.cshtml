@{
    Layout = null;
    ViewBag.Title = "Login";
}

@model DB.Models.Sesion.Login

<!DOCTYPE html>
<html>
<head>
    <title>Login PRHM</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="~/Content/css/Login.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/content/LoginStyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


</head>
<body>
    <div class="user_card">
        <div class="brand_logo_container">
            <img src="~/Content/PRHM.PNG" class="brand_logo" alt="Logo">
        </div>
        <div class="d-flex justify-content-center form_container">
            @*<h2 class="text-center mb-4">Login</h2>*@
            @using (Html.BeginForm("ValidarCredenciales", "Sesiones", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="correo" class="control-label"><i class="fas fa-envelope-open"></i> Correo</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        </div>
                        <input type="email" id="correo" name="correo" class="form-control">
                    </div>
                    @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                </div>




                <div class="form-group">
                    <label for="clave" class="control-label"><i class="fas fa-lock"></i> Contraseña</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                        <input type="password" id="clave" name="clave" class="form-control">
                    </div>
                    @Html.ValidationMessageFor(model => model.clave, "", new { @class = "text-danger" })
                </div>


                <div class="form-group text-center">
                    <button type="submit" class="btn btn-danger"><i class="fas fa-sign-in-alt"></i> Iniciar sesión</button>
                </div>


            }
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @if (Session["Error"] != null)
    {
        <script>
            NoSeElimino();

            function NoSeElimino() {
                let message = '@Session["Error"].ToString()';
                Swal.fire({
                    icon: "error",
                    title: message
                });
                @{ Session["Error"] = null; }
            }
        </script>
    }
</body>
</html>
